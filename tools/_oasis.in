OASISFormat: 0.4
Name:        ketrew
Version:     %%VERSION%%
Synopsis:    Keep Track of Experimental Workflows
Authors:     Sebastien Mondet <seb@mondet.org>,
             Jeff Hammerbacher <jeff.hammerbacher@gmail.com>
License:     Apache-2.0
Plugins:     META (0.4)
BuildTools: ocamlbuild

Flag all
  Description: build and install everything
  Default: false

Flag test
  Description: Build the Tests
  Default$: flag(all)

Flag coverage
  Description: Use Bisect to generate coverage data.
  Default:     false

Library ketrew_pure
  Path: src/pure/
  BuildDepends:  %%PURE_FINDLIB_PACKAGES%%
  Modules: Ketrew_pervasives, 
    Ketrew_path,
    Ketrew_program,
    Ketrew_host,
    Ketrew_measurement,
    Ketrew_monitored_script,
    Ketrew_target,
    Ketrew_protocol,
    Ketrew_metadata

Library ketrew
  Path:       src/lib
  BuildDepends: ketrew_pure, %%UNIX_FINDLIB_PACKAGES%%
  Modules: Ketrew,
    Ketrew_unix_io,
    Ketrew_daemonize,
    Ketrew_document,
    Ketrew_edsl,
    Ketrew_error,
    Ketrew_host_io,
    Ketrew_long_running,
    Ketrew_long_running_utilities,
    Ketrew_lsf,
    Ketrew_pbs,
    Ketrew_yarn,
    Ketrew_plugin,
    Ketrew_eval_condition,
    Ketrew_unix_process,
    Ketrew_configuration,
    Ketrew_engine,
    Ketrew_interaction,
    Ketrew_explorer,
    Ketrew_command_line,
    Ketrew_client,
    Ketrew_server

Executable ketrew_test
  Path: src/test/
  CompiledObject: best
  BuildDepends: ketrew
  Build$: flag(all) || flag(test)
  Install: false
  MainIs:  main.ml

Executable ketrew_cli_test
  Path: src/test/
  CompiledObject: best
  BuildDepends: ketrew
  Build$: flag(all) || flag(test)
  Install: false
  MainIs:  Workflow_Examples.ml

Executable ketrew_integration_test
  Path: src/test/
  CompiledObject: best
  BuildDepends: ketrew
  Build$: flag(all) || flag(test)
  Install: false
  MainIs:  integration.ml

Library ketrew_dummy_plugin_test_lib
  Path: src/test/
  CompiledObject: best
  BuildDepends: ketrew
  Build$: flag(all) || flag(test)
  Install: false
  Modules: Dummy_plugin

Executable ketrew_dummy_plugin_user_test
  Path: src/test/
  CompiledObject: best
  BuildDepends: ketrew, ketrew_dummy_plugin_test_lib
  Build$: flag(all) || flag(test)
  Install: false
  MainIs:  dummy_plugin_user.ml

Executable ketrew
  Path: src/app/
  CompiledObject: best
  BuildDepends: ketrew
  Install: true
  MainIs:  main.ml

Executable clientjoo
  Path: src/client-joo/
  CompiledObject: byte
  BuildDepends: ketrew_pure, js_of_ocaml, js_of_ocaml.syntax
  Install: false
  MainIs:  main.ml

